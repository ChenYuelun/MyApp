<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyRadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@drawable/rb_main_textcolor_selector</item>
        <item name="android:textSize">12sp</item>

    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#ffffff</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">#ffffff</item>

    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#747474</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Anim_fade" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>

    <style
        name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fragment_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fragment_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fragment_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fragment_right_out</item>
    </style>


    <style name="GoodsInfoTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="ViewLine">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#3a668e</item>

    </style>

    <style name="RadioButton_PopuWiondow">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/rb_bg_selector</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@drawable/rb_textcolor_selector</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
