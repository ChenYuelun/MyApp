<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:background="@drawable/ic_self_avatar"
            android:id="@+id/iv_header_icon"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:gravity="center"
            android:padding="1dp"
            android:id="@+id/tv_like_count"
            android:layout_marginTop="3dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:textColor="#fff"
            android:textSize="10sp"
            tools:text="5.22k" />


    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/iv_sex"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_username"
                android:textColor="#698fba"
                android:textSize="14sp"
                tools:text="百思不得白富美"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/tv_zan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/shenhe_ding_pic_night"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="0" />


            <TextView
                android:id="@+id/tv_cai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/shenhe_cai_pic_night"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="28" />

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:id="@+id/ll_zhuiping"
            android:background="#fff4f6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:background="#ffe6eb"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_username2"
                    android:layout_marginLeft="10dp"
                    android:textColor="#698fba"
                    android:textSize="14sp"
                    tools:text="百思不得白富美"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_marginRight="30dp"
                    android:id="@+id/tv_zan_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/shenhe_ding_pic_night"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="0" />


                <TextView
                    android:id="@+id/tv_cai_2"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/shenhe_cai_pic_night"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="28" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_zhuiping"
                android:textSize="16sp"
                android:textColor="#000000"
                tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_pinglun"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="bbbbbbbbbbbb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/iv_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



        <View
            android:background="#cccccc"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>



</LinearLayout>